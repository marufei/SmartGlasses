<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac"
    android:orientation="vertical"
    tools:context="com.yxys365.smartglasses.activity.UserInfoActivity">

    <include layout="@layout/view_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bac"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"

        android:scrollbars="none"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:elevation="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="30dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="*"
                    android:textColor="@color/red_d8"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textSize="14sp"
                    android:textColor="@color/gray_4a"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/user_info_et_phone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:hint="注册后不得修改"
                        android:textColorHint="@color/gray_d0"
                        android:textSize="14sp"
                        android:maxLength="11"
                        android:lines="1"
                        android:inputType="number"
                        android:background="@null"
                        android:textColor="@color/gray_4a"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:background="@color/gray_d0"/>
                    <TextView
                        android:id="@+id/user_info_tv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取验证码"
                        android:textSize="14sp"
                        android:padding="10dp"
                        android:textColor="@color/app_blue"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_d0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="*"
                    android:textColor="@color/red_d8"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_4a"/>
                <EditText
                    android:id="@+id/user_info_et_code"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入验证码"
                    android:background="@null"
                    android:lines="1"
                    android:inputType="number"
                    android:textColorHint="@color/gray_d0"
                    android:textSize="14sp"
                    android:textColor="@color/gray_4a"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_d0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="*"
                    android:textColor="@color/red_d8"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_4a"/>
                <EditText
                    android:id="@+id/user_info_et_pwd"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textColorHint="@color/gray_d0"
                    android:textSize="14sp"
                    android:lines="1"
                    android:background="@null"
                    android:textColor="@color/gray_4a"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_d0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="*"
                    android:textColor="@color/red_d8"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="孩子姓名"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_4a"/>
                <EditText
                    android:id="@+id/user_info_et_name"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入孩子姓名"
                    android:textColorHint="@color/gray_d0"
                    android:textSize="14sp"
                    android:lines="1"
                    android:background="@null"
                    android:textColor="@color/gray_4a"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_d0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="*"
                    android:textColor="@color/red_d8"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_4a"/>
                <RadioGroup
                    android:id="@+id/user_info_rg_sex"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/user_info_rb_man"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:checked="false"
                        android:textColor="@color/gray_3"
                        android:button="@drawable/register1_select"
                        android:paddingLeft="10dp"/>
                    <RadioButton
                        android:id="@+id/user_info_rb_woman"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="女"
                        android:checked="false"
                        android:textColor="@color/gray_3"
                        android:button="@drawable/register1_select"
                        android:paddingLeft="10dp"/>
                </RadioGroup>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_d0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="*"
                    android:textColor="@color/red_d8"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="出生年月"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_4a"/>
                <TextView
                    android:id="@+id/user_info_tv_date"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:hint="请选择出生年月"
                    android:textColorHint="@color/gray_d0"
                    android:textSize="14sp"
                    android:background="@null"
                    android:textColor="@color/gray_4a"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_d0"/>
            <!--证件类型-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="证件类型"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_4a"/>
                <TextView
                    android:id="@+id/user_info_et_card"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:hint="请选择证件类型"
                    android:textColorHint="@color/gray_d0"
                    android:textSize="14sp"
                    android:background="@null"
                    android:textColor="@color/gray_4a"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible"
                    android:background="@color/gray_d0"/>
                <ImageView
                    android:id="@+id/user_info_iv_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证"
                    android:textSize="14sp"
                    android:padding="15dp"
                    android:src="@mipmap/icon_down"
                    android:textColor="@color/app_blue"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_d0"/>
            <!--证件号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="证件号码"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_4a"/>
                <EditText
                    android:id="@+id/user_info_et_card_number"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入证件号码"
                    android:textColorHint="@color/gray_d0"
                    android:textSize="14sp"
                    android:background="@null"
                    android:textColor="@color/gray_4a"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_d0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="*"
                    android:textColor="@color/red_d8"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="监护人\n姓名"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_4a"/>
                <EditText
                    android:id="@+id/user_info_et_parent"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入监护人姓名"
                    android:textColorHint="@color/gray_d0"
                    android:textSize="14sp"
                    android:lines="1"
                    android:background="@null"
                    android:textColor="@color/gray_4a"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_d0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="*"
                    android:textColor="@color/red_d8"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="监护人\n微信号"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_4a"/>
                <EditText
                    android:id="@+id/user_info_et_wx"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入监护人微信号"
                    android:textColorHint="@color/gray_d0"
                    android:textSize="14sp"
                    android:lines="1"
                    android:background="@null"
                    android:textColor="@color/gray_4a"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_d0"/>
            
            <Button
                android:id="@+id/user_info_next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/solid_blue"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:text="下一步"
                android:textSize="16sp"
                android:elevation="3dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
