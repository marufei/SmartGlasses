<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bac">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/solid_white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="23dp"
        android:paddingBottom="23dp"
        android:elevation="3dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/app_blue"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textSize="12sp"
                android:text="正向调节"
                android:textColor="@color/white"
                android:paddingBottom="10dp"/>


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/app_blue"
                android:layout_marginLeft="1dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:text="负向调节"
                android:textSize="12sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/app_blue"
                android:layout_marginLeft="1dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:text="正向精调"
                android:textSize="12sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/app_blue"
                android:layout_marginLeft="1dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:text="负向精调"
                android:textSize="12sp"
                android:textColor="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/fragment_rd3_ztj"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/app_blue"
                android:layout_marginLeft="1dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="5dp"
                android:drawableRight="@mipmap/icon_dowm_white"
                android:textSize="14sp"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/fragment_rd3_ftj"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/blue_4d"
                android:layout_marginLeft="1dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="5dp"
                android:drawableRight="@mipmap/icon_dowm_white"
                android:textSize="14sp"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/fragment_rd3_zjing"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/app_blue"
                android:paddingRight="5dp"
                android:drawableRight="@mipmap/icon_dowm_white"                android:layout_marginLeft="1dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/fragment_rd3_fjing"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/blue_4d"
                android:paddingRight="5dp"
                android:drawableRight="@mipmap/icon_dowm_white"
                android:layout_marginLeft="1dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/white"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/fragment_rd3_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        android:background="@drawable/solid_blue"
        android:text="下一步"
        android:textColor="@color/white"/>

</LinearLayout>